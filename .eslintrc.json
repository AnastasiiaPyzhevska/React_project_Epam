{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["prettier"],
        "parserOptions": {
        "ecmaFeatures": {
                        "jsx": true
            },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
    "react",
    "prettier"
    ],
    "rules": {
        "prettier/prettier": [
        "error", {
        "printWidth": 80,
        "trailingComma": "es5",
        "semi": true,
        "jsxSingleQuote": true,
        "singleQuote": true,
        "useTabs": true,
        "endOfLine": "auto",
        "max-len": ["error", { "code": 80 }],
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "no-whitespace-before-property": "error",
        "no-multi-spaces": "error",
        "comma-spacing": ["error", { "before": false, "after": true }]
    }
    ]
    }
   }